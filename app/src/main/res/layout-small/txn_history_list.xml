    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/back_lo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:visibility="gone" />

            <ImageView

                android:id="@+id/back_logo"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_toRightOf="@+id/back"
                android:paddingLeft="10dp"
                android:src="@drawable/caribou_logo"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="5dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/txn_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:gravity="right|center"
                android:text="Refresh"
                android:textColor="#848688"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/txn_refresh_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:layout_gravity="right"
                android:src="@drawable/actionbar_refresh" />

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="left"
                android:paddingTop="5dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/merchant_pos_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Transaction History"
            android:textColor="#848688"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/merchant_pos_id"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:text="@string/branch_address"
            android:textColor="#848688"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

<View
    android:id="@+id/separator"
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.02"
    android:background="#df2121" />

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_gravity="center_horizontal"
    android:layout_weight="7"
    android:background="#fff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="5.2">



    <TextView
        android:id="@+id/txn_filter_header"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="5dp"
        android:text="Filter by payment status"
        android:gravity="center"
        android:layout_height="wrap_content"></TextView>

    <Spinner
        android:id="@+id/txn_filter"
        style="@style/spinner_style"
        android:overlapAnchor="false"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_height="wrap_content"></Spinner>

    <EditText
        android:id="@+id/edit_search_by_mobile_no"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:imeOptions="actionDone"
        android:layout_marginLeft="10dp"
        android:maxLength="8"
        android:layout_marginRight="10dp"
        android:hint="   Search by Mobile No"
        android:drawableLeft="@drawable/search"
        android:inputType="phone"
        android:layout_height="wrap_content"></EditText>

    <Button
        android:id="@+id/transaction_history_search"
        android:layout_width="100dp"
        android:layout_margin="10dp"
        android:text="SEARCH"
        android:textColor="@color/white"
        android:visibility="gone"
        android:background="@drawable/rounded_corner_btn"
        android:layout_height="wrap_content"></Button>


    <ListView android:id="@android:id/list"
        android:layout_marginTop="1dp"

        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

</LinearLayout>

</LinearLayout>