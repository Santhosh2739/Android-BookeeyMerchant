                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="xxxxxxx"
                android:textColor="#ffffff"
                android:textSize="20sp" />
