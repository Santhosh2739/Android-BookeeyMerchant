                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/view"
                        android:layout_weight="0.4"
                        android:background="@drawable/button_rounded_corners"
                        android:text="@string/edit"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        tools:visibility="visible"
                        android:visibility="gone" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/invoice_expire_share_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/invoice_edit_reminder_layout"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/invoice_expire_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/view"
                        android:layout_weight="0.4"
                        android:background="@drawable/button_rounded_corners"
                        android:text="Expire"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        tools:visibility="visible"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="20dp"
                        android:layout_height="1dp"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/invoice_share_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/view"
                        android:layout_weight="0.4"
                        android:background="@drawable/button_rounded_corners"
                        android:text="@string/share"
                        android:visibility="gone"
                        android:textAllCaps="true"
                        tools:visibility="visible"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        />
                </LinearLayout>


                <TextView
                    android:id="@+id/payment_confirm_total_payment_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/invoice_expire_share_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_column="1"
                    android:layout_marginTop="10dp"
                    android:text="@string/total_paymnet"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/payment_confirm_greeting_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/payment_confirm_total_payment_id"
                    android:layout_centerHorizontal="true"
                    android:layout_column="1"
                    android:layout_marginTop="20dp"
                    android:text="@string/thank_you_for_using_bookeey_wallet"
                    android:textSize="14sp" />


                <Button
                    android:id="@+id/txn_history_print_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/payment_confirm_greeting_id"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_corner_btn"
                    android:text="@string/print"
                    android:visibility="gone"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/main_menu_merchant_name__bottom_tiltle"
                    android:layout_below="@+id/txn_history_print_btn"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1.3"
                    android:gravity="bottom|right|center_vertical">

                    <TextView
                        android:id="@+id/powered_by_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="@string/powered_by" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/powered_by_text_id"
                        android:background="@drawable/icon2"
                        android:gravity="center_vertical" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>